@model AcademyApp.Models.EmployeeModel
@{
    Layout = "~/Views/Shared/_Master.cshtml";
    }
@* this is the for the search box *@
<div class="col-md-4">
    <div class="form-group">
        <div class="input-group">
            @using (@Html.BeginForm("Search","Employees",FormMethod.Get, new {})) {
                @Html.TextBoxFor(x=>x.SearchPhrase)
                <span class="input-group-btn">
                    <input type="submit" value="Go"/>
                </span>
            }
        </div>
    </div>
</div>
@* this is for the result table *@
<div class="col-md-12">
    <div class="col-md-4">
        <table class="table table-striped table-hover ">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Alias</th>
            </tr>

            @for (int i = 0; i < Model.Result.Count; i++) {
                <tr>
                    <td>@Model.Result[i].Id</td>
                    <td>@Model.Result[i].Email</td>
                    <td>@Model.Result[i].Alias</td>
                </tr>
            }

        </table>

    </div>
</div>

